<section class='message'>
    <a href='/project/{{id}}'>
        <div class='message-header'>
            <h3 class='title is-3'>
                {{name}}
            </h3>
        </div>
        <div class='message-body'>
            <p class='content'>
                {{details}}
            </p>
            <p class='content'>
                {{funded}} raised of {{goal}}
            </p>
            <p class='content'>
                Deadline: {{deadline}}
            </p>
        </div>
    </a>
</section>